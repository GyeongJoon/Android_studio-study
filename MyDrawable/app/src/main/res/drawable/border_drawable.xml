<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 첫 번째 아이템: 바깥쪽 테두리 -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#BE55DA" /> <!-- 테두리의 두께와 색상 -->
            <solid android:color="#00000000" /> <!-- 내부 색상 (투명) -->
            <size android:width="200dp" android:height="100dp" /> <!-- 크기 지정 -->
        </shape>
    </item>
    <!-- 두 번째 아이템: 안쪽 테두리 -->
    <item android:top="1dp" android:bottom="1dp"
        android:right="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#FF55DA" /> <!-- 테두리의 두께와 색상 -->
            <solid android:color="#00000000" /> <!-- 내부 색상 (투명) -->
        </shape>
    </item>
</layer-list>
